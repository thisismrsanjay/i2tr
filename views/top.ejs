                    <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Get Started</a>
                      <div class="dropdown-menu" aria-labelledby="dropdown01">
                        <a class="dropdown-item" href="/window/5bcd3ec07eca180015f7a2e8">Test Window</a>
                        <a class="dropdown-item"  href="/window/<%= user._id %>">Create Window</a>
                        <a class="dropdown-item" data-toggle="modal" data-target="#exampleModal2" >Join Window</a>
                      </div>
                    </li>
                    <% }%>
                    <li class="nav-item">
                      <a class="nav-link" target="_blank" href="/examples">Examples</a>
                    </li>
                  </ul>
